<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Neko.Iconics" parent="">
        <item name="iiv_size">24dp</item>
        <item name="iiv_color">?attr/colorAccent</item>
        <item name="iiv_checked_color">?attr/colorAccent</item>
        <item name="iiv_unchecked_color">?attr/colorAccent</item>
        <item name="iiv_checked_size">24dp</item>
        <item name="iiv_unchecked_size">24dp</item>
        <item name="android:background">@drawable/round_ripple</item>
    </style>

    <style name="Neko.Preference" parent="PreferenceThemeOverlay">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColorSecondary">@color/text_color_high_emphasis</item>
    </style>

    <style name="Neko.Button" parent="Theme.Widget.Button"></style>

    <style name="Neko.Button.Primary" parent="Theme.Widget.Button.Primary">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Neko.Button.TextButton" parent="Theme.Widget.Button.TextButton">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Neko.Button.Rounded.Alternative" parent="Theme.Widget.Button.Primary">
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="backgroundTint">@color/mtrl_btn_bg_color_selector_alternative</item>
        <item name="android:textColor">?attr/colorOnUnreadBadge</item>
        <item name="cornerRadius">20dp</item>
    </style>


    <style name="Neko.Button.RoundedOutline" parent="Theme.Widget.Button.RoundedOutline">
        <item name="strokeColor">?attr/colorAccent</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>


    <style name="Neko.NumberPicker" parent="NumberPicker.EditTextStyle">
        <item name="android:textAppearance">@style/Neko.Headline5</item>
    </style>

    <style name="Neko.NumberPicker.Tooltip" parent="NumberPicker.ToolTipStyle">
        <item name="android:textAppearance">@style/Neko.Headline5</item>
    </style>

    <style name="cursor" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="Neko.TextInputLayout.OutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:theme">@style/cursor</item>
        <item name="boxStrokeColor">?attr/colorAccent</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintTextColor">?attr/colorAccent</item>
        <item name="endIconTint">?attr/colorAccent</item>
    </style>

    <style name="Neko.Toolbar.TitleText" parent="">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:letterSpacing">-.023</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Neko.Toolbar.SubTitleText" parent="">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:letterSpacing">-.023</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>